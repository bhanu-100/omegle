{
  "name": "webrtc-chat-service",
  "version": "1.0.0",
  "description": "Scalable WebRTC chat service supporting 1000+ concurrent users",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "test": "jest",
    "test:load": "node tests/load-test.js",
    "docker:build": "docker build -t webrtc-chat .",
    "docker:run": "docker run -p 3000:3000 webrtc-chat",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "kafkajs": "^2.2.4",
    "prom-client": "^15.1.0",
    "socket.io": "^4.7.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "webrtc",
    "chat",
    "scalable",
    "socketio",
    "ioredis",
    "kafka"
  ],
  "author": "Bhanu Pratap Singh",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
