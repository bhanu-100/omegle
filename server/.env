# WebRTC Chat Service Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173
# Clustering
CLUSTER_WORKERS=2
MAX_CONNECTIONS_PER_WORKER=300

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_POOL_SIZE=5
REDIS_TTL_SOCKET_MAP=7200
REDIS_TTL_MATCH_MAP=3600
REDIS_TTL_USER_STATS=172800

# Kafka Configuration (Optional)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_EVENTS=webrtc-events
KAFKA_SSL_CA=
KAFKA_SSL_KEY=
KAFKA_SSL_CERT=
KAFKA_BATCH_SIZE=100
KAFKA_BATCH_TIMEOUT=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Socket.IO Configuration
SOCKET_IO_TRANSPORTS=websocket,polling
SOCKET_IO_PING_TIMEOUT=30000
SOCKET_IO_PING_INTERVAL=15000

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Performance Tuning
UV_THREADPOOL_SIZE=16
NODE_OPTIONS=--max-old-space-size=2048